<h1 class="mb-1 restaurant-show-title">Modify Restaurant</h1>
<div class=" modify-container">
  <div class="modify-form-body wrapper">
    <form action="/restaurant/{{restaurant.id}}?_method=PUT" method="POST" class="edit-form-container">
      <div class="box box1">
        <div class="col">
          <label><b>中文名稱:</b> </label>
        </div>
        <div class="col" id="modify-name-input">
          <input type="text" placeholder="{{restaurant.name}}" placeholder="name(CN)" name="name"
            value="{{restaurant.name}}" />
        </div>

        <div class="col">
          <label><b>英文名稱:</b></label>
        </div>
        <div class="col" id="modify-name-en-input">
          <input type="text" placeholder="{{restaurant.name_en}}" name="name_en" value="{{restaurant.name_en}}" />

        </div>

        <div class="col">
          <label><b>餐廳類別:</b> </label>
        </div>
        <div class="col" id="modify-category-input">
          <select id="category" name="category">
            <option value="{{restaurant.category}}" selected hidden disabled>{{restaurant.category}}</option>
            <option>中東料理</option>
            <option>日本料理</option>
            <option>義式餐廳</option>
            <option>美式</option>
            <option>酒吧</option>
            <option>咖啡</option>
            <option>台式料理</option>
            <option>越南料理</option>
            <option>韓式料理</option>
            <option>飲料店</option>
            <option>零食甜點</option>
          </select>
        </div>

        <div class="col">
          <label><b>照片url:</b> </label>
        </div>
        <div class="col" id="modify-image-url-input">
          <input ype="url" placeholder="Image URL..." name="image" value="{{restaurant.image}}" />
        </div>

        <div class="col">
          <label><b>餐廳住址:</b> </label>
        </div>
        <div class="col" id="modify-location-input">
          <input type="text" placeholder="{{restaurant.location}}" name="location" value="{{restaurant.location}}" />
        </div>

        <div class="col">
          <label><b>電話號碼:</b></label>
        </div>
        <div class="col" id="modify-telephone-input">
          <input type="tel" placeholder="{{restaurant.phone}}" name="phone" value="{{restaurant.phone}}" />
        </div>

        <div class="col">
          <label><b>谷歌地圖:</b></label>
        </div>
        <div class="col" id="modify-google-map-input">
          <input type="url" placeholder="{{restaurant.google_map}}" name="google_map"
            value="{{restaurant.google_map}}" />
        </div>
        <div class="col">
          <label><b>餐廳評分:</b></label>
        </div>
        <div class="col" id="modify-rate-input">
          <input type="number" placeholder="{{restaurant.rating}}" name="rating" value="{{restaurant.rating}}" min="1"
            max="5" step="0.1" />
        </div>

        <div class="col">
          <label><b>餐廳介紹:</b> </label>
        </div>
        <div class="col" id="modify-description-input">
          <textarea type="description" placeholder="{{restaurant.description}}" name="description"
            value="{{restaurant.description}}"> {{restaurant.description}}</textarea>
        </div>
        <center>
          <button class="btn btn-major btn-primary " id="create-submit-btn" type="submit"
            style="font: size 0.9em;">Modify</button>
          <button onclick="history.back()" type="button" class="btn back-button btn-primary ">Back</button>
        </center>
    </form>
  </div>
</div>