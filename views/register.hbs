<h1 class="mb-1 restaurant-show-title">Register</h1>
{{> message}}

<div class=" register-container">
  <div class="register-form-body  wrapper ">
    <form action="/users" method="POST">
      <div class="box box1">
        <div class="col">
          <label for="name"><b>Name</b></label>
        </div>
        <div class="col" id="register-name-input">
          <input type="text" name="name" placeholder="Enter name">
        </div>
        <div class="col">
          <label for="email"><b>Email:</b></label>
        </div>
        <div class="col" id="register-email-input">
          <input type="email" name="email" placeholder="Enter email" required>
        </div>
        <div class="col">
          <label for="password"><b>Password:</b></label>
        </div>
        <div class="col" id="register-password-input">
          <input type="password" name="password" placeholder="Enter password" required>
        </div>
        <div>
          <div class="col">
            <label for="confirmPassword"><b>Confirmed Password:</b></label>
          </div>
          <div class="col" id="register-confirmed-password-input">
            <input type="password" name="confirmPassword" placeholder="Confirm password" required>
          </div>
        </div>
        <center>
          <div class="col" style="margin-top:8% ">
            <button class="col btn btn-major btn-outline-primary " type="submit" style="font-size: 0.9em">Sign
              Up</button>
        </center>
      </div>
    </form>
  </div>
  <div class="register-or-div"> or </div>
  <div class="register-form-footer wrapper">
    <center>
      <div class="facebook-register box box1">
        <form action="/oauth/login/facebook" method="GET">
          <button class="col btn btn-major btn-primary fa fa-facebook" type="submit"> Facebook Login</button>
        </form>
        <div class="col">
          <span style="font-size: 0.7em">Already have an account?</span>
          <a style="font-size: 0.7em" href="/login">Login</a>
        </div>
      </div>
    </center>
  </div>
</div>