<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}
  <span class="badge rounded-pill bg-danger font-weight-normal">
    {{restaurant.rating}}
    <i class="fa fa-star fa-xs"></i>
  </span>
</h1>

<div class="container">
  {{> message}}
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fa fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fa fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fa fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fa fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
  <div class="details-two-button">
    <a class="btn btn-major btn-primary btn-sm" href="/restaurant" id="create-button"><i class="fa fa-search">
        Return
      </i></a>
    {{!-- modify --}}
    <a class="btn btn-major btn-success btn-sm" href="/restaurant/{{restaurant.id}}/edit" id="create-button"><i
        class="fa fa-search">
        Modify
      </i></a>
    {{!-- delete --}}
    <form action="/restaurant/{{restaurant.id}}?_method=DELETE" method="POST" style="display: inline;">
      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
    </form>
  </div>
</div>